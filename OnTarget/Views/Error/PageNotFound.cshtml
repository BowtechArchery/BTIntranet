@model ErrorViewModel
@{
    ViewData["Title"] = "404 - PageNotFound";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 class="text-danger">404 - Page Not Found</h1>
<br />
<h2 class="text-danger">The page you are trying to access cannot be found. Please check the URL.</h2>
<br />
<p>Please contact the Information Technology department if you need assistance.</p>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}
