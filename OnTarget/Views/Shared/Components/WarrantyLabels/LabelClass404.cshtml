@model OnTarget.Models.Warranty.WarrantyLabelsViewModel

<p style="color:black">Warranty Custom Case Label (404)</p>

<label class="control-label">Part Number</label>

<br />

@(Html.Kendo().AutoComplete()
             .Name("PartNumber")
             .DataTextField("PartNumber")
             .Filter("contains")
             .Placeholder("Enter Part Number...")
             .MinLength(3)
             .HtmlAttributes(new { required = "required", style = "width:50%;height:50px" })
             .DataSource(source =>
             {
                 source
                        .Read(read =>
                        {
                            read.Action("SearchPartNumbers", "Warranty")
                            .Data("onAdditionalData");
                        })
             .ServerFiltering(true);
            })
)

<br />

<span class="k-invalid-msg" data-for="PartNumber" style="width: 500px; display:inline-block;"></span>

<br />
<br />


<label asp-for="SelectedBowHand" class="control-label"></label>
<select asp-for="SelectedBowHand" asp-items="@Model.BowHands" class="form-control" style="height: 60px;" required title="Please Select a Bow Hand" oninvalid="this.setCustomValidity('Please Select a Bow Hand')" oninput="this.setCustomValidity('')">
    <option value="" selected>Select Hand</option>
</select>
<span asp-validation-for="SelectedBowHand" class="text-danger" style="width: 500px; display: block;"></span>

<br />
<br />

<label asp-for="DrawWeight" class="control-label"></label>
<input asp-for="DrawWeight" type="text" style="width: 400px" class="form-control" required placeholder="Enter a Draw Weight" title="Please Enter a Draw Weight" oninvalid="this.setCustomValidity('Please Enter a Draw Weight')" oninput="this.setCustomValidity('')">
<span asp-validation-for="DrawWeight" class="text-danger" style="width: 500px; display:block;"></span>

<br />
<br />

<label asp-for="RiserColor" class="control-label"></label>
<input asp-for="RiserColor" type="text" style="width: 400px" class="form-control" required placeholder="Enter a Riser Color" title="Please Enter a Riser Color" oninvalid="this.setCustomValidity('Please Enter a Riser Color')" oninput="this.setCustomValidity('')">
<span asp-validation-for="RiserColor" class="text-danger" style="width: 500px; display:block;"></span>

<br />
<br />

<label asp-for="LimbColor" class="control-label"></label>
<input asp-for="LimbColor" type="text" style="width: 400px" class="form-control" required placeholder="Enter a Limb Color" title="Please Enter a Limb Color" oninvalid="this.setCustomValidity('Please Enter a Limb Color')" oninput="this.setCustomValidity('')">
<span asp-validation-for="LimbColor" class="text-danger" style="width: 500px; display:block;"></span>

<br />
<br />

<label asp-for="NumberOfCopies" class="control-label"></label>
<input asp-for="NumberOfCopies" type="text" value="1" style="width: 100px" ; class="form-control" required>
<span asp-validation-for="NumberOfCopies" class="text-danger" style="width: 500px; display:block;"></span>

<br />

<label class="control-label">Printer</label>
<select asp-for="SelectedPrinterID" asp-items="@Model.LabelPrinters" class="form-control" style="height: 60px;" required title="Please Select a Printer" oninvalid="this.setCustomValidity('Please Select a Printer')" oninput="this.setCustomValidity('')">
    <option value="" selected>Select Printer</option>
</select>
<span asp-validation-for="SelectedPrinterID" class="text-danger" style="width: 500px; display: block;"></span>

<br />
<br />

<div class="form-group">
    <input type="submit" value="Print Label(s)" class="btn btn-primary" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

<script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <script src="~/lib/kendo-ui/js/kendo.all.min.js"></script>
    <script src="~/lib/kendo-ui/js/kendo.aspnetmvc.min.js"></script>