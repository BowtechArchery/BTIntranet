@model OnTarget.Models.SupplyChain.WorkOrderPickSheetViewModel

@{
    ViewData["Title"] = "Generate Work Order Pick Sheet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h1>Generate Work Order Pick Sheet</h1>

<br />

<div class="row">
    <div class="col-sm-10">
        <form asp-action="GenerateWorkOrderPickSheet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="WorkOrders" class="control-label"></label>
                            <textarea asp-for="WorkOrders" id="txtAreaWorkOrders" rows="20" cols="25" class="form-control" style="width: 300px;"></textarea>
                            <span asp-validation-for="WorkOrders" class="text-danger" style="width: 500px; display:block;"></span>

                            <br /><br />

                            <div class="form-group">
                                <input id="btnGenerateWOPickSheet" type="submit" value="Generate Work Order Pick Sheet(s)" class="btn btn-primary" />
                            </div>

                        </div>
                        
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    $('#btnGenerateWOPickSheet').click(function () {
        setTimeout(function () { $('#txtAreaWorkOrders').val(''); }, 2000);
    });
</script>

}